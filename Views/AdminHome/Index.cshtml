@model IEnumerable<Private_Note.Areas.Identity.Data.ApplicationUser>

<div class="container p-3">
    <div class="col-6">
        <h2 class="text-primary">User List</h2>
    </div>
    @*<div class="col-6 text-right">
            <a asp-controller="AdminHome" asp-action="DeleteUser" class="btn btn-primary">
                Delete User
            </a>
        </div>*@
    <form method="post" enctype="multipart/form-data" asp-controller="AdminHome" asp-action="DeleteUser">
        <div class="row">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Delete User</p>
                    <input name="userName" type="text" placeholder="User Name" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input class="btn btn-success" type="submit" value="Delete" />
            </div>
        </div>
    </form>
    <form method="post" enctype="multipart/form-data" asp-controller="AdminHome" asp-action="ChangeSecretPassword">
        <div class="row">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Change Secret Password</p>
                    <input name="userName" type="text" placeholder="User Name" />
                </div>
                <div class="col-md-10">
                    <input name="secretPassword" type="text" placeholder="Secret Password" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input class="btn btn-success" type="submit" value="Change Secret Password" />
            </div>
        </div>
    </form>
    <form method="post" enctype="multipart/form-data" asp-controller="AdminHome" asp-action="ContactUser">
        <div class="row">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Contact User</p>
                    <input name="userType" type="text" placeholder="U(User) A(Admin)" />
                    <input name="userName" type="text" placeholder="User Name" />
                </div>
                <div class="col-md-10">
                    <input name="subject" type="text" placeholder="subject" />
                </div>
                <div class="col-md-10">
                    <textarea name="content" type="text" rows="20" cols="50" placeholder="content"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input class="btn btn-success" type="submit" value="Contact User" />
            </div>
        </div>
    </form>
    <div class="col-6 text-right">
        <a href='/Identity/Account/AdminRegister' class="btn btn-primary">
            Add Admin
        </a>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Secret Password
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th>
                        Is Admin
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.UserName</td>
                        <td width="40%">@obj.Password</td>
                        <td width="50%">@obj.SecretPassword</td>
                        <td width="40%">@obj.Email</td>
                        <td width="20%">@obj.IsAdmin</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No User exist</p>
    }
</div>

